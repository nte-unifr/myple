{% if tools is not empty %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <h2 class="panel-title">
                Outils li√©s
                <span class="label label-primary pull-right">{{ tools | length }}</span>
            </h2>
        </div>
        <div class="panel-body">
            <div class="row">
                {% for tool in tools %}
                    <div class="col-xs-6 col-md-3">
                        <a href="{{ tool.link }}" class="thumbnail">
                            <img src="{{ vich_uploader_asset(tool, 'imageFile') }}">
                            <div class="caption text-center">
                                <span class="label label-default">{{ tool.name }}</span>
                            </div>
                        </a>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endif %}