<div class="tool card mb-3 mix {% for family in tool.families %}family-{{ family.id }} {% endfor %}" data-order="{{ tool.name }}">
  <div class="card-body">
    <div class="d-flex align-items-center">
      {% if tool.imageName is empty %}
        <img class="img-thumbnail float-left mr-3" src="{{ ('/images/void.png') | imagine_filter('thumb_50') }}" alt="">
      {% else %}
        <img class="img-thumbnail float-left mr-3" src="{{ vich_uploader_asset(tool, 'imageFile') | imagine_filter('thumb_50') }}" alt="">
      {% endif %}
      <h5 class="card-title">{{ tool.name }}</h5>
      {% if tool.infoFr %}
        <i class="fas fa-info-square ml-auto align-self-start" style="font-size:1.2em;"
          data-toggle="tooltip" title="{{ tool.infoFr | striptags | raw }}">
        </i>
      {% endif %}
    </div>
  </div>
  <div class="list-group list-group-flush">
    {% if tool.activities is not empty %}
      <a tabindex="0" class="list-group-item list-group-item-action tools-popover d-flex justify-content-between align-items-center pointer" role="button"
        data-toggle="popover" data-id="{{ tool.id }}" data-trigger="focus">
        Activités liées <span class="badge badge-pill badge-primary">{{ tool.activities | length }}</span>
      </a>
    {% endif %}
    <a href="{{ tool.link }}" class="list-group-item list-group-item-action">Accéder à l'outil <i class="fal fa-external-link-square-alt"></i></a>
  </div>
  <div class="card-footer">
    {% for family in tool.families %}
      <span class="badge badge-primary">{{ family.nameFr }}</span>
    {% endfor %}
  </div>
</div>
<div class="d-none">
  <div class="tool-activities" data-id="{{ tool.id }}">
    {% include '_shared/_activities-list.html.twig' with { 'activities': tool.activities, 'active': 'no' } %}
  </div>
</div>