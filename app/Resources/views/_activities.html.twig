<div class="panel panel-default panel-activities">
    <div class="panel-heading">
        <h2 class="panel-title">
            Activit√©s
            <span class="label label-primary pull-right">{{ activities | length }}</span>
        </h2>
    </div>
    <div class="panel-body">
        <ul class="side-list activities-list nav nav-pills nav-stacked">
            {% for activity in activities %}
                <li role="presentation" {% if activity.id == active %}class="active"{% endif %}>
                    <a href="{{ path('activities_show', {'id': activity.id}) }}">
                        <span>{{ activity }}</span>
                    </a
                </li>
            {% endfor %}
        </ul>
    </div>
</div>

