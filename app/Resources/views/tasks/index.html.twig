{% extends 'base.html.twig' %}

{% block title %}Scénarios{% endblock %}
{% block tasks_active %}active{% endblock %}

{% block body %}
  <div class="row">
    <div class="col">
      {% include 'tasks/_video.html.twig' %}
    </div>
  </div>

  <div class="row">
    <div class="col">
      <p class="lead">Parcourir par scénario</p>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <div id="accordion">
        {% for task in tasks %}
          {{ render(controller(
            'AppBundle:Task:show',
            { 'id': task.id }
          )) }}
        {% endfor %}
      </div>
    </div>
  </div>
{% endblock %}