{% extends 'base.html.twig' %}

{% block title %}{{ 'tasks'|trans }}{% endblock %}
{% block tasks_active %}active{% endblock %}

{% block body %}
  <div class="row">
    <div class="col">
      <div class="card bg-light p-4 mb-4">
        {{ 'app_description'|trans }} 
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <p class="lead">{{ 'browse'|trans }}</p>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <div id="accordion">
        {% for task in tasks %}
          {{ render(controller(
            'AppBundle:Task:show',
            { 'id': task.id }
          )) }}
        {% endfor %}
      </div>
    </div>
  </div>
{% endblock %}