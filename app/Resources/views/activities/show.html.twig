{% extends 'base.html.twig' %}

{% block title %}{{ activity.nameFr }}{% endblock %}

{% block body %}
    <div id="activity" class="row">
        <div class="page-header col-xs-12">
            <h1 class="h2">
                {{ activity.nameFr }}
                <small>{{ activity.task.nameFr }}</small>
            </h1>
        </div>
        <div class="col-xs-12 col-sm-4 pull-right">
            <p>
                <a href="{{ path('tasks_index') }}" class="btn btn-default btn-block">Retour à la liste des scénarios</a>
            </p>
            {% if activity.humanUpdatedAt is not empty %}
                <p class="well">Mise à jour le {{ activity.humanUpdatedAt | date("d.m.Y") }}</p>
            {% endif %}
            {% include '_activities.html.twig' with { 'activities': activity.task.activities, 'active': activity.id } %}
        </div>
        <div class="col-xs-12 col-sm-8">
            <div>
                <!-- Nav tabs -->
                <ul class="nav nav-tabs" role="tablist">
                    <li role="presentation" class="active"><a href="#goals" aria-controls="goals" role="tab" data-toggle="tab"><h3>Finalités</h3></a></li>
                    <li role="presentation"><a href="#steps" aria-controls="steps" role="tab" data-toggle="tab"><h3>Etapes</h3></a></li>
                    {% if activity.biblio %}
                        <li role="presentation"><a href="#biblio" aria-controls="biblio" role="tab" data-toggle="tab"><h3>Bibliographie</h3></a></li>
                    {% endif %}
                    {% if activity.tools is not empty %}
                        <li role="presentation"><a href="#tools" aria-controls="tools" role="tab" data-toggle="tab"><h3>Outils</h3></a></li>
                    {% endif %}
                    {% if resources is not empty or tutorials is not empty %}
                        <li role="presentation"><a href="#resources" aria-controls="resources" role="tab" data-toggle="tab"><h3>Ressources</h3></a></li>
                    {% endif %}
                </ul>
                <!-- Tab panes -->
                <div class="tab-content">
                    <div role="tabpanel" class="tab-pane active" id="goals">
                        <div class="tab-inner">{{ activity.goalFr | raw }}</div>
                    </div>
                    <div role="tabpanel" class="tab-pane" id="steps">
                        <div class="tab-inner">{{ activity.stepsFr | raw }}</div>
                    </div>
                    {% if activity.biblio %}
                        <div role="tabpanel" class="tab-pane" id="biblio">
                            <div class="tab-inner">{{ activity.biblio | raw }}</div>
                        </div>
                    {% endif %}
                    {% if activity.tools is not empty %}
                        <div role="tabpanel" class="tab-pane" id="tools">
                            <div class="tab-inner">
                                {% include '_tools.html.twig' with { 'tools': activity.tools } %}
                            </div>
                        </div>
                    {% endif %}
                    {% if resources is not empty or tutorials is not empty %}
                        <div role="tabpanel" class="tab-pane" id="resources">
                            <div class="tab-inner">
                                {% include '_resources.html.twig' %}
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}