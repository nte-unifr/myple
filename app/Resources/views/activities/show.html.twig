{% extends 'base.html.twig' %}

{% block title %}{{ activity.nameFr }}{% endblock %}
{% block tasks_active %}active{% endblock %}

{% block body %}
  <div id="activity">
    <div class="row my-4">
      <div class="col">
        <h1 class="h3">{{ activity.nameFr }} <small class="text-muted">{{ activity.task.nameFr }}</small></h1>
      </div>
    </div>

    <div class="row">
      <div class="col-12 col-md-8">
        {% include 'activities/_content.html.twig' %}
      </div>
      <div class="col-12 col-md-4">
        {% include 'activities/_sidebar.html.twig' %}
      </div>
    </div>
  </div>
{% endblock %}