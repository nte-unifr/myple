<div class="tool card mb-3">
  <div class="card-header d-flex align-items-center">
    {% include '_i18n/print_title.html.twig' with {'entity': formation} %}
  </div>
  <div class="card-body">
    {% include '_i18n/print_description.html.twig' with {'entity': formation} %}
  </div>
  <div class="p-0">
    <div class="list-group list-group-flush">
      {% if formation.url %}
        <a href="{{ formation.url }}" class="list-group-item list-group-item-action">{{ 'go_to_formation'|trans }} <i data-feather="external-link" width="14" height="14"></i></a>
      {% endif %}
      {% if formation.activities is not empty %}
        <a tabindex="0" class="list-group-item list-group-item-action formations-popover d-flex justify-content-between align-items-center pointer" role="button"
          data-toggle="popover" data-id="{{ formation.id }}" data-trigger="focus">
          {{ 'linked_activities'|trans }} <span class="badge badge-pill badge-primary">{{ formation.activities | length }}</span>
        </a>
      {% endif %}
    </div>
  </div>
  <div class="card-footer">
    {% for tag in formation.tags %}
      <span class="badge badge-light bg-white">{% include '_i18n/print_name.html.twig' with {'entity': tag} %}</span>
    {% endfor %}
  </div>
</div>
<div class="d-none">
  <div class="formation-activities" data-id="{{ formation.id }}">
    {% include '_shared/_activities-list.html.twig' with { 'activities': formation.activities, 'active': 'no' } %}
  </div>
</div>