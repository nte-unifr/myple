{% if resources %}
  <div class="card mb-2">
    <div class="card-header d-flex justify-content-between align-items-center">
      {{ list_title }} <span class="badge badge-pill badge-primary">{{ resources | length }}</span>
    </div>
    <div class="list-group list-group-flush">
      {% for resource in resources %}
        <a href="{{ resource.url }}"
          class="list-group-item list-group-item-action d-flex justify-content-between align-items-center popover-toggler"
          data-toggle="popover" data-placement="right" data-content="{{ resource.additional }}"
        >
          {{ resource }}
          {% include '_shared/_icon_chooser.html.twig' with { 'type': resource.type } %}
        </a>
      {% endfor %}
    </div>
  </div>
{% endif %}